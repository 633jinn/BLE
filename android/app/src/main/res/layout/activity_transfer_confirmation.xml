<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    tools:context=".TransferConfirmationActivity">

    <!-- Enhanced Header with SOL Branding -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        android:background="@drawable/sol_header_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@drawable/sol_header_gradient">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="뒤로가기"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOL 페이"
                    android:textSize="12sp"
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="송금 확인"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Security Badge -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shield"
                android:background="@drawable/circle_white_background"
                app:tint="#4CAF50" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="8dp">

            <!-- Enhanced Transfer Amount Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1976D2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="송금 금액"
                        android:textSize="14sp"
                        android:textColor="#B3E5FC"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/transferAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,000,000"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Transfer Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- BLE Transfer Technology Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="#E3F2FD">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bluetooth"
                            android:layout_marginEnd="8dp"
                            app:tint="#1976D2" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="송금 정보 확인"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VERIFIED"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:background="#E8F5E8"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- From Account -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보내는 계좌"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/fromBankIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_bank"
                            android:background="@drawable/circle_background"
                            android:padding="8dp"
                            app:tint="#1976D2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fromAccountInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="신한은행 110-123-456789"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#212121" />

                            <TextView
                                android:id="@+id/fromAccountBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="잔액 1,234,567원"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Modern Transfer Arrow -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginVertical="8dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="#1976D2"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="#FFFFFF" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="#E0E0E0" />

                    </LinearLayout>

                    <!-- To User -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="받는 분"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:elevation="2dp">

                        <View
                            android:id="@+id/toUserColorIndicator"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/circle_background"
                            android:elevation="2dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/toUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사용자 이름"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#212121" />

                            <TextView
                                android:id="@+id/toUserDevice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BLE Device • 보안 연결됨"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_verified"
                            app:tint="#4CAF50" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Transaction Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Transaction Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="#E8F5E8">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_shield"
                            android:layout_marginEnd="6dp"
                            app:tint="#4CAF50" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="거래 상세 정보"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="실시간"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:background="#E3F2FD"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- Transaction Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:padding="8dp"
                        android:background="#F8F9FA">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="거래 일시"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#424242" />

                        <TextView
                            android:id="@+id/transactionDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024-01-15 14:30"
                            android:textSize="13sp"
                            android:textColor="#212121" />

                    </LinearLayout>

                    <!-- Transaction Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:padding="8dp"
                        android:background="#F8F9FA">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="거래 구분"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#424242" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLE 계좌이체"
                            android:textSize="13sp"
                            android:textColor="#1976D2"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#F8F9FA">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수수료"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#424242" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="무료"
                            android:textSize="13sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:background="#E8F5E8"
                            android:padding="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Security Warning -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_shield"
                        app:tint="#FF9800" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보안 확인"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#E65100"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="거래 내용을 다시 한번 확인하시고 이체 버튼을 눌러주세요."
                            android:textSize="11sp"
                            android:textColor="#BF360C" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256bit"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:background="#FFECB3"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Enhanced Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_outline"
            android:textColor="#757575"
            android:layout_marginEnd="12dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/transferButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="2"
            android:text="@string/transfer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#1976D2"
            android:textColor="@color/white"
            android:elevation="4dp"
            android:drawableStart="@drawable/ic_verified"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp" />

    </LinearLayout>

</LinearLayout>