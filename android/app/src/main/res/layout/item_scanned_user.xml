<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:minHeight="60dp">

    <!-- Color indicator -->
    <View
        android:id="@+id/colorIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Signal strength icon -->
    <ImageView
        android:id="@+id/signalStrength"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_signal_strength"
        android:contentDescription="Signal strength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rssiValue" />

    <!-- RSSI value -->
    <TextView
        android:id="@+id/rssiValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/signalStrength"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- User name -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/colorIndicator"
        app:layout_constraintEnd_toStartOf="@id/rssiValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deviceAddress"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Device address -->
    <TextView
        android:id="@+id/deviceAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:singleLine="true"
        android:ellipsize="middle"
        app:layout_constraintStart_toEndOf="@id/colorIndicator"
        app:layout_constraintEnd_toStartOf="@id/rssiValue"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>